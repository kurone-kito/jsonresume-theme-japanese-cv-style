{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2019.array"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": ".",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017"
  },
  "exclude": ["./node_modules/**/*", "./public/**/*"],
  "include": ["./src/**/*", "./gulpfile.ts"]
}
